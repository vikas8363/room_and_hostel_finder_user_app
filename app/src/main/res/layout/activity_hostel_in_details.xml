<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".CitywiseHostels.HostelInDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:id="@+id/ll_view_hostel_in_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_view_hostel_in_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/linear_account_input_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_type_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:text="Property Type "
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_name_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Name "
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_mobile_no_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Mobile No"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_mobile_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:autoLink="phone"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_email_id_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Email Id"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_email_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_address_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Address"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_city_state_pincode_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="City,State,Pincode"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_city_state_pincode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_category_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Cateogry"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_category"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_rent_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Rent"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_rent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_capacity_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Capacity"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_capacity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_number_of_room_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Number of Room"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_number_of_room"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_mess_available_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Mess Available"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_mess_available"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_parking_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Parking Available"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_parking"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_special_rules_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Special Rules"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_special_rule"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_rating_title"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="rating"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tv_view_hostel_in_details_rating"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif-black"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="2dp"/>

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_view_hostel_in_details_in_google_map"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@color/colorAccent"
                                android:fontFamily="@font/bungee"
                                android:layout_marginTop="20dp"
                                android:text="View In Map"
                                android:drawableLeft="@drawable/icon_marker"
                                android:paddingLeft="8dp"
                                android:textColor="@color/white" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_view_hostel_in_details_book_hostel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@color/colorAccent"
                                android:fontFamily="@font/bungee"
                                android:layout_marginTop="20dp"
                                android:text="Book Property"
                                android:textColor="@color/white" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_view_in_details_profile"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/profileimage" />
        
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@android:color/holo_green_dark"
            android:visibility="gone" />
    </RelativeLayout>

</ScrollView>