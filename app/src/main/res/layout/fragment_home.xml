<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview11"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/iv_rooms"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/rooms"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_category_name"
                android:text="Rooms"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:fontFamily="@font/bungee"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview22"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/iv_government_hostels"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/government_hostel"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_government_hostels_name"
                android:text="Government Hostels"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:fontFamily="@font/bungee"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview33"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/iv_private_hostels"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/private_hostel"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_private_hostels_name"
                android:text="Private Hostels"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:fontFamily="@font/bungee"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>